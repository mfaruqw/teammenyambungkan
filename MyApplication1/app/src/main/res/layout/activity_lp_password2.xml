<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.futsal2.myapplication1.LpPassword2">

    <TextView
        android:text="masukkan kode keamanan "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="59dp"
        android:id="@+id/textView9"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="periksa email anda apakah ada pesan yang berisi kode anda"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="67dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/textView5"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:text="kami telah mengirim Kode ke Email anda"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="531dp"
        tools:layout_editor_absoluteX="-281dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView7"
        android:layout_above="@+id/masukkan_kode"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/masukkan_kode"
        android:hint="MASUKKAN KODE"
        android:inputType="textPassword"
        android:layout_width="355dp"
        android:layout_height="64dp"
        tools:layout_editor_absoluteY="208dp"
        tools:layout_editor_absoluteX="3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjutkan"
        android:id="@+id/Lanjutkan"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="303dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/masukkan_kode"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:id="@+id/batal"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="303dp"
        tools:layout_editor_absoluteX="213dp"
        android:layout_alignBaseline="@+id/Lanjutkan"
        android:layout_alignBottom="@+id/Lanjutkan"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <TextView
        android:text="belum menerima kode ? "
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="386dp"
        tools:layout_editor_absoluteX="63dp"
        android:id="@+id/textView6"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/Lanjutkan"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
