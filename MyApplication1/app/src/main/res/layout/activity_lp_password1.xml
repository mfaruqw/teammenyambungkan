<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.futsal2.myapplication1.LpPassword1">

    <TextView
        android:text="Mari masuk ke account anda  "
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="95dp"
        tools:layout_editor_absoluteX="14dp"
        android:id="@+id/textView3"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="masukkan alamat email anda"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="50dp"
        android:layout_marginBottom="45dp"
        android:id="@+id/textView4"
        android:layout_above="@+id/etEmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="353dp"
        android:layout_height="41dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etEmail"
        android:hint="E-mail"
        tools:layout_editor_absoluteY="223dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_above="@+id/Lanjutkan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjutkan"
        android:id="@+id/Lanjutkan"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="311dp"
        tools:layout_editor_absoluteX="136dp"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
